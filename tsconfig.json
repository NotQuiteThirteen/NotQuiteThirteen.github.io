{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [ "env.d.ts", "src/**/*", "src/**/*.vue" ],
  "compilerOptions": {
    "typeRoots": [ "./src/types" ],
    "baseUrl": ".",
    "paths": {
      "@/*": [ "./src/*" ]
    },
    "outDir": "dist",
    "lib": ["es2017", "dom"]
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ],

  "allowJs": true
}
